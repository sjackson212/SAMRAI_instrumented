SAMRAI	      =	@top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = source
OBJECT        = ..

default: library

include $(OBJECT)/config/Makefile.config

SUBDIRS = SAMRAI

library:
	for DIR in $(SUBDIRS); do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done
clean:
	for DIR in $(SUBDIRS) test; do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done

